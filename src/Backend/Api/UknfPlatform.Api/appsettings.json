{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=uknf_platform;Username=postgres;Password=postgres"
  },
  "Encryption": {
    "Key": "SecureEncryptionKey123!@#ForDevelopmentOnly"
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "UseSsl": false,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@uknf.gov.pl",
    "FromName": "UKNF Communication Platform"
  },
  "ApplicationSettings": {
    "FrontendUrl": "http://localhost:4200"
  },
  "PasswordPolicy": {
    "MinLength": 8,
    "MaxLength": 128,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": true,
    "MinUniqueChars": 5,
    "PasswordHistoryCount": 5,
    "PasswordExpirationDays": 90,
    "ProhibitedPasswords": [
      "password",
      "123456",
      "qwerty",
      "admin",
      "welcome",
      "letmein",
      "monkey",
      "dragon"
    ]
  },
  "Jwt": {
    "SecretKey": "UknfPlatformDevelopmentSecretKey2024!@#MinimumRequired32CharactersForHMACSHA256SecurityCompliance",
    "Issuer": "UknfCommunicationPlatform",
    "Audience": "UknfCommunicationPlatformUsers",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "FileStorage": {
    "StorageType": "Local",
    "LocalStoragePath": "./storage/files"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "guest",
    "Password": "guest"
  },
  "Validation": {
    "MockDelaySeconds": 5,
    "TimeoutHours": 24
  }
}
